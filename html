    <!-- JavaScript for dynamic behavior -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- User Authentication and Dashboard ---
            const loginButton = document.getElementById('login-button');
            const logoutButton = document.getElementById('logout-button');
            const dashboardSection = document.getElementById('user-dashboard');
            const marketplaceSection = document.getElementById('marketplace');
            const listSpaceCta = document.getElementById('list-space-cta');
            let isLoggedIn = false;

            const myAdSpacesContainer = document.getElementById('my-ad-spaces');
            const noSpacesMessage = document.getElementById('no-spaces-message');
            const addSpaceForm = document.getElementById('add-space-form');

            // Sample data for the user's listed spaces
            let userSpaces = [];

            const renderUserSpaces = () => {
                myAdSpacesContainer.innerHTML = ''; // Clear existing content
                if (userSpaces.length === 0) {
                    noSpacesMessage.classList.remove('hidden');
                    myAdSpacesContainer.appendChild(noSpacesMessage);
                } else {
                    noSpacesMessage.classList.add('hidden');
                    userSpaces.forEach(space => {
                        const card = document.createElement('div');
                        card.className = 'bg-white rounded-2xl shadow-lg p-6 flex flex-col justify-between';
                        card.innerHTML = `
                            <div>
                                <h3 class="text-xl font-bold text-gray-900">${space.name}</h3>
                                <p class="mt-2 text-gray-500 text-sm">${space.description}</p>
                            </div>
                            <div class="mt-6 flex justify-between items-center">
                                <span class="text-2xl font-bold text-blue-600">$${space.price}<span class="text-base font-normal text-gray-400">/mo</span></span>
                                <button data-id="${space.id}" class="delete-space-button bg-red-50 text-red-600 font-medium py-2 px-6 rounded-full hover:bg-red-100 transition-colors duration-300">
                                    Delete
                                </button>
                            </div>
                        `;
                        myAdSpacesContainer.appendChild(card);
                    });
                }
            };

            const toggleLoginState = () => {
                isLoggedIn = !isLoggedIn;
                if (isLoggedIn) {
                    loginButton.classList.add('hidden');
                    logoutButton.classList.remove('hidden');
                    dashboardSection.classList.remove('hidden');
                    marketplaceSection.classList.add('hidden');
                    renderUserSpaces();
                } else {
                    loginButton.classList.remove('hidden');
                    logoutButton.classList.add('hidden');
                    dashboardSection.classList.add('hidden');
                    marketplaceSection.classList.remove('hidden');
                }
            };

            loginButton.addEventListener('click', toggleLoginState);
            logoutButton.addEventListener('click', toggleLoginState);

            listSpaceCta.addEventListener('click', (e) => {
                e.preventDefault();
                if (!isLoggedIn) {
                    showMessageBox('Please log in to list your space.');
                }
                toggleLoginState();
            });
            
            // Handle adding a new space
            addSpaceForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const name = document.getElementById('spaceName').value;
                const description = document.getElementById('spaceDescription').value;
                const price = document.getElementById('spacePrice').value;
                
                const newSpace = {
                    id: Date.now(), // Unique ID for the space
                    name,
                    description,
                    price
                };
                
                userSpaces.push(newSpace);
                renderUserSpaces();
                addSpaceForm.reset();
            });

            // Handle deleting a space
            myAdSpacesContainer.addEventListener('click', (e) => {
                if (e.target.classList.contains('delete-space-button')) {
                    const idToDelete = parseInt(e.target.dataset.id);
                    userSpaces = userSpaces.filter(space => space.id !== idToDelete);
                    renderUserSpaces();
                }
            });

            // --- Brand Proposals Modal ---
            const proposalsButton = document.getElementById('cta-brand-proposals-button');
            const proposalsInterface = document.getElementById('brand-proposals-interface');
            const closeButton = document.getElementById('close-proposals-button');

            proposalsButton.addEventListener('click', () => {
                proposalsInterface.classList.remove('hidden');
            });
            
            closeButton.addEventListener('click', () => {
                proposalsInterface.classList.add('hidden');
            });

            proposalsInterface.addEventListener('click', (e) => {
                if (e.target === proposalsInterface) {
                    proposalsInterface.classList.add('hidden');
                }
            });

            // --- Marketplace Search Filter ---
            const marketplaceSearch = document.getElementById('marketplace-search');
            const marketplaceSpaces = document.querySelectorAll('.ad-card');

            marketplaceSearch.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                marketplaceSpaces.forEach(card => {
                    const textContent = card.textContent.toLowerCase();
                    if (textContent.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });

            // --- Message Box Functionality ---
            const messageBox = document.getElementById('message-box');
            const messageText = document.getElementById('message-text');
            const closeMessageBoxButton = document.getElementById('close-message-box');

            function showMessageBox(message) {
                messageText.textContent = message;
                messageBox.classList.remove('hidden');
            }

            closeMessageBoxButton.addEventListener('click', () => {
                messageBox.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
